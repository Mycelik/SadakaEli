@using SadakaEli.Model.Domain
@{
    ViewBag.Title = "UpdateNews";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}
@model News
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Haber Güncelleme Ekranı</h3>
            </div>
            <form id="frmUpdateNews" role="form">
                <div class="card-body">
                    <input type="hidden" id=txtNewsId value="@Model.Id" />

                    <div class="form-group">
                        <label>Haberin Başlığı</label>
                        <input type="text" value="@Model.Headline" class="form-control" id="txtHeadline" placeholder="Haberin Başlığını Giriniz.">
                    </div>
                    <div class="form-group">
                        <label>Haberin İçeriği </label>
                        <input type="text" value="@Model.Explanation" class="form-control" id="txtExplanation" placeholder="Haberin İçeriğini  Giriniz.">
                    </div>
                </div>
                <div class="card-footer">
                    <input id="btnNewsUpdate" type="button" class="btn btn-primary btnpDüzenle" value="Güncelleştir" />
                </div>
            </form>
        </div>
    </div>
</div>

@section styles{

    <link href="~/Areas/Yonetim/Content/plugins/summernote/summernote-bs4.min.css" rel="stylesheet" />
    <link href="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Areas/Yonetim/Content/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Areas/Yonetim/Scrpits/News/NewsUpdate.js"></script>
}


