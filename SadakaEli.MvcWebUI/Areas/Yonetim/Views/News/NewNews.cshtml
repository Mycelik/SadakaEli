@using SadakaEli.Model.ComplexTypes.Yonetim.News
@{
    ViewBag.Title = "NewNews";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}
@model NewNewsVm

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Yeni Haber Oluşturma</h3>
            </div>
            <form id="frmNewNews" role="form">
                <div class="card-body">
                    <div class="form-group">
                        <label>Haberin Başlığı</label>
                        <input type="text" class="form-control" id="txtHeadline" placeholder="Haberin Başlığını Yazınız." name="txtHeadline">
                    </div>
                    <div class="form-group">
                        <label>Haberin İçeriği</label>
                        <textarea id="txtExplanation" placeholder="Haberin İçeriği "
                                  style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Fotoğraf</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="fuPhoto">
                                <label class="custom-file-label">Haber Fotoğrafı Seçiniz</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button id="btnSave" type="button" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section styles{

    <link href="~/Areas/Yonetim/Content/plugins/summernote/summernote-bs4.min.css" rel="stylesheet" />
    <link href="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

}




@section scripts{

    <script src="~/Areas/Yonetim/Content/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Areas/Yonetim/Scrpits/News/NewNews.js"></script>
}

