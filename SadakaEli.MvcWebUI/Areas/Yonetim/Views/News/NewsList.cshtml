@using SadakaEli.Model.Domain
@{
    ViewBag.Title = "NewsList";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}
@model List<News>
<table id="tblNews" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Fotoğraf</th>
            <th>Haberin Oluşturulduğu Tarih</th>
            <th>Haberin Başlığı</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (News item in Model)
        {
            <tr>
                <td>
                    <img src="~/Areas/Yonetim/Content/img/NewsImages/@item.Photo" style="width:80px;" />
                </td>
                <td>@item.Created.Value.ToShortDateString()</td>
                <td>@item.Headline</td>
                <td>
                    <a href="@Url.Action("UpdateNews","News",new {id=item.Id})" newsId="@item.Id" class="btn btn-warning btnNewsDuzenle">Düzenle </a>
                </td>
                <td>
                    <button newsId="@item.Id" type="button" class="btn btn-danger btnNewsSil" style="width:auto;">Sil </button>
                </td>
            </tr>
        }



    </tbody>

</table>


@section styles{
    <link rel="stylesheet" href="~/Areas/Yonetim/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Yonetim/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.css" />
}

@section scripts{
    <script src="~/Areas/Yonetim/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Areas/Yonetim/Scrpits/News/NewsList.js"></script>
    <script src="~/Areas/Yonetim/Scrpits/News/NewsDelete.js"></script>
    <script src="~/Areas/Yonetim/Scrpits/News/NewsUpdate.js"></script>
}



